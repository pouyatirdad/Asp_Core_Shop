@model Computer_Accessories_Shop.Api.ViewModel.Account.RegisterViewModel


<form action="/account/register" method="post">

	<div class="form-group">
		<label for="singin-email-2">نام کاربری *</label>
		<input type="text" class="form-control" name="UserName" required>
	</div>
	<div class="form-group">
		<label for="singin-email-2">آدرس ایمیل *</label>
		<input type="text" class="form-control" name="Email" required>
	</div>
	<div class="form-group">
		<label for="singin-email-2">رمز *</label>
		<input type="password" class="form-control" name="Password" required>
	</div>
	<div class="form-group">
		<label for="singin-email-2">تکرار رمز *</label>
		<input type="password" class="form-control" name="RetypePassword" required>
	</div>
	<div class="form-footer">
		<button type="submit" class="btn btn-outline-primary-2">
			<span>ثبت نام</span>
			<i class="icon-long-arrow-left"></i>
		</button>
	</div>
</form>
