
@model IEnumerable<Computer_Accessories_Shop.Data.Model.Product>
@{
	ViewData["Title"] = "محصولات";
	Layout = "../shared/_AdminLayout.cshtml";
}


<h5 class="d-flex justify-content-center align-items-center text-center">

	محصولات

</h5>

<br />

<div>

	<div class="d-flex justify-content-start pr-3">
		<a href="@Url.Action("ProductCreate","admin", new { catId = ViewBag.catId })" class="btn btn-primary">
			ایجاد محصول جدید
		</a>
	</div>

	@if (Model.Any())
	{
			<table class="w-75 mx-auto table mt-4 text-right">
			  <thead>
				<tr>
				  <th scope="col">شماره</th>
				  <th scope="col">عنوان</th>
				  <th scope="col">قیمت</th>
				  <th scope="col">تخفیف</th>
				  <th scope="col">تاریخ ایجاد</th>
				  <th scope="col">دستورات</th>
				</tr>
			  </thead>
			  <tbody>
				@foreach (var item in Model)
				{
						<tr>
						  <th scope="row">@item.ID</th>
						  <td>@item.Title</td>
						  <td>@item.Price</td>
						  <td>@item.Discount</td>
						  <td>@item.AddedDate</td>
						  <td>
							<a href="@Url.Action("ProductEdit","admin", new { id = item.ID })" class="btn btn-warning">
								ادیت
							</a>
							<a href="@Url.Action("ProductDelete","admin", new { id = item.ID })" class="btn btn-danger">
								حذف
							</a>
						  </td>
						</tr>
				}
			  </tbody>
			</table>
	}
	else
	{
			<h6 class="text-danger text-center">
				محصولی جهت نمایش وجود ندارد
			</h6>
	}

</div>
